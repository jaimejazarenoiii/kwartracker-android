<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kwartracker.android.login.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_loginFragment_to_walletsFragment"
            app:destination="@id/walletsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashoardFragment"
            app:destination="@id/dashoardFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.kwartracker.android.signup.ui.SignUpFragment"
        android:label="Login"
        tools:layout="@layout/fragment_signup" />

    <fragment
        android:id="@+id/walletsFragment"
        android:name="com.kwartracker.android.wallet.ui.MyWalletsFragment"
        android:label="Login"
        tools:layout="@layout/fragment_wallets" >
        <action
            android:id="@+id/action_walletsFragment_to_addWalletFragment"
            app:destination="@id/addWalletFragment" />
        <action
            android:id="@+id/action_walletsFragment_to_editWalletFragment"
            app:destination="@id/editWalletFragment" />
    </fragment>

    <fragment
        android:id="@+id/transaction_fragment"
        android:name="com.kwartracker.android.transactions.ui.main.TransactionFragment"
        android:label="Transaction"
        tools:layout="@layout/fragment_transaction" >
        <action
            android:id="@+id/action_transaction_fragment_to_add_wallet_transaction_fragment2"
            app:destination="@id/add_wallet_transaction_fragment" />
        <action
            android:id="@+id/action_transaction_fragment_to_edit_transaction_fragment"
            app:destination="@id/edit_transaction_fragment" />
        <action
            android:id="@+id/action_transaction_fragment_to_dashoardFragment"
            app:destination="@id/dashoardFragment" />
    </fragment>

    <fragment
        android:id="@+id/add_wallet_transaction_fragment"
        android:name="com.kwartracker.android.transactions.ui.add.AddWalletTransactionFragment"
        android:label="Transaction Add"
        tools:layout="@layout/fragment_add_wallet_transaction" >
        <action
            android:id="@+id/action_add_wallet_transaction_fragment_to_add_detail_transaction_fragment"
            app:destination="@id/add_detail_transaction_fragment" />
    </fragment>

    <fragment
        android:id="@+id/edit_transaction_fragment"
        android:name="com.kwartracker.android.transactions.ui.edit.EditTransactionFragment"
        android:label="Transaction Add"
        tools:layout="@layout/fragment_add_wallet_transaction" />

    <fragment
        android:id="@+id/add_detail_transaction_fragment"
        android:name="com.kwartracker.android.transactions.ui.add.AddDetailTransactionFragment"
        android:label="Transaction Add"
        tools:layout="@layout/fragment_add_detail_transaction" />

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.kwartracker.android.profile.ui.MyProfileFragment"
        android:label="Transaction"
        tools:layout="@layout/fragment_my_profile" />

    <fragment
        android:id="@+id/dashoardFragment"
        android:name="com.kwartracker.android.dashboard.ui.DashboardFragment"
        android:label="Login"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashoardFragment_to_walletsFragment"
            app:destination="@id/walletsFragment" />
        <action
            android:id="@+id/action_dashoardFragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
        <action
            android:id="@+id/action_dashoardFragment_to_transaction_fragment"
            app:destination="@id/transaction_fragment" />
    </fragment>

    <fragment
        android:id="@+id/addWalletFragment"
        android:name="com.kwartracker.android.wallet.ui.add.AddWalletFragment"
        android:label="@string/title_add_wallet"
        tools:layout="@layout/fragment_add_wallet" />

    <fragment
        android:id="@+id/editWalletFragment"
        android:name="com.kwartracker.android.wallet.ui.edit.EditWalletFragment"
        android:label="@string/title_edit_wallet"
        tools:layout="@layout/fragment_edit_wallet" />

</navigation>