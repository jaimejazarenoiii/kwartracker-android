<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kwartracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/Transaction.Popup.Category</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="dialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:popupBackground">@color/tranparent_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/tranparent_white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Confirmation.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="Transaction.Popup.Category" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/roundsemi_dialog</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="style_labels" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_text_fields" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_bg_round_corner</item>
        <item name="elevation">18dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
