<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/content_main"
        tools:context=".profile.ui.MyProfileFragment" >

        <RelativeLayout
            android:id="@+id/rl_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.383">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:text="@string/lbl_which_wallet_do_you_want_to_add"
                android:textColor="#BBC3C9"
                tools:ignore="ContentDescription|RelativeOverlap" />

            <EditText
                android:id="@+id/et_category"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="25sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/edittext_bg_round_corner"
                android:elevation="10sp"
                android:hint="Select wallet to add"
                android:inputType="text"
                android:padding="14sp"
                android:textColor="#414141"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/ib_category"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32sp"
                android:layout_marginEnd="30sp"
                android:background="@drawable/roundsemi_gray"
                android:elevation="11sp"
                android:src="@drawable/ic_arrow_down_gray_24"
                android:text="Button"
                tools:ignore="HardcodedText,ContentDescription"

                />


        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="375dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bg_round_corner"
            android:elevation="10sp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/app_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_step1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>