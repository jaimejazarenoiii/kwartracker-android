<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="30sp"
                android:id="@+id/navView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/bottom_sheet_behavior"
                app:behavior_hideable="true">

                <TextView
                    android:id="@+id/tv_date_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="@string/lbl_default_date_range"
                    android:textColor="#414141"
                    android:textSize="25sp"
                    android:layout_marginTop="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/ib_close"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ib_close"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/round_gray"
                    android:src="@drawable/ic_close_8"
                    android:elevation="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23sp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ib_close">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_date_range"
                            android:layout_marginStart="20sp"
                            android:textColor="#BBC3C9"
                            tools:ignore="RelativeOverlap" />

                        <EditText
                            android:id="@+id/et_date_range"
                            android:layout_width="match_parent"
                            android:layout_height="55sp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="20sp"
                            android:layout_marginTop="25sp"
                            android:autofillHints="Search"
                            android:background="@drawable/edittext_bg_round_corner"
                            android:elevation="10sp"
                            android:hint="@string/lbl_this_month"
                            android:inputType="text"
                            android:padding="14sp"
                            android:textColor="#414141"
                            android:textSize="16sp"
                            tools:ignore="TextFields" />

                        <ImageButton
                            android:id="@+id/ib_date_range"
                            android:elevation="11sp"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="32sp"
                            android:layout_marginEnd="30sp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/roundsemi_gray"
                            android:src="@drawable/ic_arrow_down_gray_24"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10sp"
                        android:layout_marginTop="24sp"
                        android:layout_marginBottom="24sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:background="@drawable/edittext_bg_round_corner"
                        android:text="@string/lbl_apply"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/app_color"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
</layout>