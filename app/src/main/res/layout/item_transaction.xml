<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/date_holder"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="MAR"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="12"
                android:textAllCaps="true"
                android:textColor="@color/app_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_month" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="Salary"
            android:textAllCaps="true"
            android:textColor="@color/app_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_transaction_name"
            app:layout_constraintEnd_toStartOf="@+id/iv_details"
            app:layout_constraintStart_toEndOf="@+id/date_holder"
            app:layout_constraintTop_toTopOf="@+id/date_holder"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_transaction_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="March 15 Payroll"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/date_holder"
            app:layout_constraintEnd_toStartOf="@+id/tv_amount"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/date_holder"
            app:layout_constraintStart_toStartOf="@+id/tv_transaction_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_transaction_type" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="+ Php 10,000.00"
            android:textColor="@color/light_red"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_transaction_name"
            app:layout_constraintEnd_toStartOf="@+id/iv_details"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_transaction_name"
            app:layout_constraintTop_toTopOf="@+id/tv_transaction_name" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/round_bg_ripple_white"
            android:clickable="true"
            android:elevation="30dp"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:padding="10dp"
            android:rotation="180"
            android:src="@drawable/ic_btn_back"
            android:tint="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/date_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_holder" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
