<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color"
        tools:context=".profile.edit.ui.EditProfileFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_white_round_top"
            android:descendantFocusability="blocksDescendants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/wallet_blue_shadow"
                    app:layout_constraintBottom_toBottomOf="@+id/holder"
                    app:layout_constraintEnd_toEndOf="@+id/holder"
                    app:layout_constraintStart_toStartOf="@+id/holder"
                    app:layout_constraintTop_toTopOf="@+id/holder"
                    tools:ignore="ContentDescription" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/holder"
                    android:layout_width="280dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/contraint_contents"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/wallet_bg_blue">

                        <TextView
                            android:id="@+id/tv_wallet_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="20dp"
                            android:text="Savings"
                            android:textAllCaps="true"
                            android:textColor="@color/tranparent_white"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_wallet_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="20dp"
                            android:text="BDO Saving"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tv_wallet_type"
                            app:layout_constraintTop_toBottomOf="@+id/tv_wallet_type" />

                        <TextView
                            android:id="@+id/tv_available_balance_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="20dp"
                            android:text="Available Balance"
                            android:textAllCaps="true"
                            android:textColor="@color/tranparent_white"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tv_wallet_name"
                            app:layout_constraintTop_toBottomOf="@+id/tv_wallet_name" />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:text="BDO Saving"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tv_available_balance_label"
                            app:layout_constraintTop_toBottomOf="@+id/tv_available_balance_label"
                            app:layout_constraintVertical_bias="0.0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_wallet_name_label"
                    style="@style/style_labels"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/lbl_wallet_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_shadow" />

                <EditText
                    android:id="@+id/et_wallet_name"
                    style="@style/style_text_fields"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="30dp"
                    android:elevation="10dp"
                    android:autofillHints="@string/hint_wallet_name"
                    android:hint="@string/hint_wallet_name"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_wallet_name_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wallet_name_label" />

                <TextView
                    android:id="@+id/tv_currency_label"
                    style="@style/style_labels"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/lbl_currency"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_wallet_name" />

                <TextView
                    android:id="@+id/et_currency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:elevation="10dp"
                    android:background="@drawable/edittext_bg_round_corner"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="30dp"
                    android:autofillHints="@string/hint_wallet_type"
                    android:hint="@string/hint_wallet_currency"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_currency_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_currency_label" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_round_light_gray"
                    android:contentDescription="@string/lbl_birthdate"
                    android:elevation="10dp"
                    android:padding="15dp"
                    android:rotation="-90"
                    android:src="@drawable/ic_btn_back"
                    app:layout_constraintBottom_toBottomOf="@+id/et_currency"
                    app:layout_constraintEnd_toEndOf="@+id/et_currency"
                    app:layout_constraintTop_toTopOf="@+id/et_currency"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_wallet_type_label"
                    style="@style/style_labels"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/lbl_wallet_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_currency" />

                <TextView
                    android:id="@+id/et_wallet_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:elevation="10dp"
                    android:background="@drawable/edittext_bg_round_corner"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="30dp"
                    android:autofillHints="@string/hint_wallet_type"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/hint_wallet_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_wallet_type_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wallet_type_label" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_round_light_gray"
                    android:contentDescription="@string/lbl_birthdate"
                    android:elevation="10dp"
                    android:padding="15dp"
                    android:rotation="-90"
                    android:src="@drawable/ic_btn_back"
                    app:layout_constraintBottom_toBottomOf="@+id/et_wallet_type"
                    app:layout_constraintEnd_toEndOf="@+id/et_wallet_type"
                    app:layout_constraintTop_toTopOf="@+id/et_wallet_type"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_include_balance_lbl"
                    style="@style/style_labels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/message_inclue_overall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_wallet_type_label"
                    app:layout_constraintTop_toBottomOf="@+id/et_wallet_type" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/switch_include"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/semi_white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_yes"
                    app:layout_constraintTop_toBottomOf="@+id/tv_include_balance_lbl"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="2dp"
                        android:paddingEnd="4dp"
                        android:rotation="180"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/nestedScrollView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:track="@android:color/transparent" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/lbl_no"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/switch_include"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/switch_include"
                    app:layout_constraintTop_toTopOf="@+id/switch_include" />

                <TextView
                    android:id="@+id/tv_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="@string/lbl_yes"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/switch_include"
                    app:layout_constraintStart_toStartOf="@+id/tv_include_balance_lbl"
                    app:layout_constraintTop_toTopOf="@+id/switch_include" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
