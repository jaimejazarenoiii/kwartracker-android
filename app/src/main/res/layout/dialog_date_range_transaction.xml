<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:text="@string/lbl_default_date_range"
                android:textColor="#414141"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ib_close"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginEnd="24sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/round_gray"
                android:src="@drawable/ic_close_8"
                android:elevation="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_date_label"
                style="@style/style_labels"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/lbl_select_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ib_close" />

            <EditText
                android:id="@+id/et_date_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="30dp"
                android:autofillHints="@string/lbl_this_week"
                android:background="@drawable/edittext_bg_round_corner"
                android:elevation="10dp"
                android:hint="@string/lbl_this_week"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_date_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_label"
                tools:ignore="TextFields" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_round_light_gray"
                android:contentDescription="@string/lbl_birthdate"
                android:elevation="10dp"
                android:padding="15dp"
                android:rotation="-90"
                android:src="@drawable/ic_btn_back"
                app:layout_constraintBottom_toBottomOf="@+id/et_date_range"
                app:layout_constraintEnd_toEndOf="@+id/et_date_range"
                app:layout_constraintTop_toTopOf="@+id/et_date_range"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/tv_wallet_type"
                style="@style/style_labels"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/lbl_wallet_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_date_range" />

            <EditText
                android:id="@+id/et_wallet_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="30dp"
                android:autofillHints="@string/lbl_all_wallet"
                android:background="@drawable/edittext_bg_round_corner"
                android:elevation="10dp"
                android:hint="@string/lbl_all_wallet"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_wallet_type"
                app:layout_constraintTop_toBottomOf="@+id/tv_wallet_type"
                tools:ignore="TextFields" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_round_light_gray"
                android:contentDescription="@string/lbl_birthdate"
                android:elevation="10dp"
                android:padding="15dp"
                android:rotation="-90"
                android:src="@drawable/ic_btn_back"
                app:layout_constraintBottom_toBottomOf="@+id/et_wallet_type"
                app:layout_constraintEnd_toEndOf="@+id/et_wallet_type"
                app:layout_constraintTop_toTopOf="@+id/et_wallet_type"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/tv_category"
                style="@style/style_labels"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/lbl_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_wallet_type" />

            <EditText
                android:id="@+id/et_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="30dp"
                android:autofillHints="@string/lbl_select_category"
                android:background="@drawable/edittext_bg_round_corner"
                android:elevation="10dp"
                android:hint="@string/lbl_select_category"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_category"
                app:layout_constraintTop_toBottomOf="@+id/tv_category"
                tools:ignore="TextFields" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_round_light_gray"
                android:contentDescription="@string/lbl_birthdate"
                android:elevation="10dp"
                android:padding="15dp"
                android:rotation="-90"
                android:src="@drawable/ic_btn_back"
                app:layout_constraintBottom_toBottomOf="@+id/et_category"
                app:layout_constraintEnd_toEndOf="@+id/et_category"
                app:layout_constraintTop_toTopOf="@+id/et_category"
                app:tint="@color/gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="30sp"
                android:background="@drawable/edittext_bg_round_corner"
                android:elevation="5sp"
                android:text="@string/lbl_apply"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/app_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_category"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>